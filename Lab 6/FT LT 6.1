#include<iostream>
using namespace std;

class Student
{
    public:
        int id;
        string name;
        int credit;
        float cg;

        void GetInfo()
        {
            cout<<"Enter id:";
            cin>>id;
            cout<<"Enter name:";
            cin>>name;
            cout<<"Enter Credit completed:";
            cin>>credit;
            cout<<"Enter CGPA:";
            cin>>cg;
            cout<<"\n\n";
        }

        void ShowInfo()
        {
            cout<<id<<"         "<<name<<"          "<<credit<<"             "<<cg;
            cout<<endl;
        }
};

class Node{

public:
    Student data;
    Node *next;
};

class LinkedList{

private:
    Node *head;
    Node *tail;

public:
    LinkedList(){
        this->head = NULL;
        this->tail = NULL;
    }

    void createNewNode(Student data){
        Node *temp = new Node();
        temp->data = data;
        temp->next = NULL;


        if(head == NULL){
            head = temp;
            tail = temp;
        }else{
            tail->next = temp;
            tail = temp;
        }
    }

    void ShowList(){
        Node *cur=head;
        while(cur != NULL) {
        cur->data.ShowInfo();
        cur = cur -> next;
    }
    }
};

